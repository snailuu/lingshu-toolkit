{
  "compilerOptions": {
    "lib": ["ES2022"],
    "jsx": "preserve",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@s": ["./src/shared"],
      "@s/*": ["./src/shared/*"]
    }
  },
  "include": ["src"]
}
