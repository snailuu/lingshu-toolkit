{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "additionalProperties": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "pattern": "^[a-z][a-zA-Z]+$" },
        "description": { "type": "string" },
        "title": { "type": "string" },
        "author": { "type": "string" }
      },
      "required": ["name"]
    }
  },
  "uniqueItems": true,
  "minItems": 1
}
